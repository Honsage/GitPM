<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>


<VBox fx:id="taskCard" spacing="6.0" styleClass="task-card" xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ru.honsage.dev.gitpm.presentation.controllers.TaskItemController" stylesheets="@../styles/main.css">
    <padding>
        <Insets bottom="8.0" left="10.0" right="10.0" top="8.0"/>
    </padding>
    <HBox alignment="CENTER_LEFT" spacing="8.0">
        <CheckBox fx:id="completedCheck" />
        <Label fx:id="titleLabel" styleClass="task-title" wrapText="true"/>
        <Region HBox.hgrow="ALWAYS"/>
        <HBox spacing="6.0" alignment="CENTER_RIGHT">
            <HBox spacing="6.0" fx:id="priorityBox" alignment="CENTER">
                <Button fx:id="priorityLow" onAction="#onPriorityLow" styleClass="priority" mnemonicParsing="false"/>
                <Button fx:id="priorityMedium" onAction="#onPriorityMedium" styleClass="priority" mnemonicParsing="false"/>
                <Button fx:id="priorityHigh" onAction="#onPriorityHigh" styleClass="priority" mnemonicParsing="false"/>
            </HBox>

            <Button fx:id="editButton" onAction="#onEdit" styleClass="icon-button"/>
            <Button fx:id="deleteButton" onAction="#onDelete" styleClass="icon-button"/>
        </HBox>
    </HBox>
    <Label fx:id="contentLabel" wrapText="true" styleClass="task-content" />
    <HBox alignment="CENTER_LEFT" spacing="8.0">
        <Label fx:id="deadlineLabel" styleClass="task-deadline" />
        <Region HBox.hgrow="ALWAYS"/>
        <Label fx:id="createdLabel" styleClass="task-created"/>
    </HBox>
</VBox>
