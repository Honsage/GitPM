<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="12" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
      stylesheets="@../../styles/main.css"
      fx:controller="ru.honsage.dev.gitpm.presentation.controllers.EditScriptDialogController">

    <padding>
        <Insets bottom="16" left="16" right="16" top="16" />
    </padding>

    <Label fx:id="errorLabel" alignment="CENTER" contentDisplay="CENTER" style="-fx-font-size: 16px;" textAlignment="CENTER" textFill="RED" wrapText="true">
        <font>
            <Font size="6.0" />
        </font>
    </Label>

    <GridPane hgap="8" vgap="10">
        <columnConstraints>
            <ColumnConstraints minWidth="100" />
            <ColumnConstraints hgrow="ALWAYS" />
            <ColumnConstraints minWidth="40" />
        </columnConstraints>

        <Label text="Название" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="titleField"
                   promptText="Обязательное поле"
                   GridPane.rowIndex="0"
                   GridPane.columnIndex="1"
                   GridPane.columnSpan="2"/>

        <Label text="Описание" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextArea fx:id="descriptionField"
                  prefRowCount="3"
                  GridPane.rowIndex="1"
                  GridPane.columnIndex="1"
                  GridPane.columnSpan="2"
                  wrapText="true"/>

        <Label text="Рабочая директория" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="workingDirField"
                   promptText="Каталог выполнения"
                   GridPane.rowIndex="2"
                   GridPane.columnIndex="1"/>
        <Button text="..."
                onAction="#onChooseDirectory"
                prefWidth="40"
                GridPane.rowIndex="2"
                GridPane.columnIndex="2"/>

        <Label text="Команда" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextArea fx:id="commandField"
                  promptText="Например: docker compose up"
                  prefRowCount="2"
                  GridPane.rowIndex="3"
                  GridPane.columnIndex="1"
                  GridPane.columnSpan="2"
                  wrapText="true"/>
    </GridPane>

    <Separator />

    <HBox alignment="CENTER_RIGHT" spacing="8">
        <Button text="Отмена" onAction="#onCancel"/>
        <Button text="Сохранить"
                defaultButton="true"
                styleClass="approve-button"
                onAction="#onSave"/>
    </HBox>

</VBox>
